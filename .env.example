# 数据库配置
DATABASE_URL="mysql://inventory_app:secure_inventory_password@localhost:3306/inventory_system"

# Next-Auth.js 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-at-least-32-characters-long"

# Redis 配置（缓存层）
REDIS_URL="redis://127.0.0.1:6379"
REDIS_POOL_SIZE="3"
REDIS_NAMESPACE="kucun"

# WebSocket 配置
WS_PORT="3002"
WS_ALLOWED_ORIGINS="http://localhost:3000"
NEXT_PUBLIC_WS_PORT="3002"

# 应用配置
NODE_ENV="development"
PORT="3000"

# 文件上传配置
UPLOAD_DIR="./public/uploads"
UPLOAD_MAX_SIZE="10485760"  # 10MB in bytes

# 缓存配置
PRODUCT_CACHE_TTL="60"  # 产品缓存时间（秒）
INVENTORY_CACHE_TTL="10"  # 库存缓存时间（秒，库存变化频繁）

# 库存阈值配置
INVENTORY_DEFAULT_MIN_QUANTITY="10"  # 默认最小库存阈值
INVENTORY_CRITICAL_MIN_QUANTITY="5"  # 紧急库存阈值
INVENTORY_OVERSTOCK_MULTIPLIER="5"  # 库存过多倍率
INVENTORY_MAX_STOCK_MULTIPLIER="50"  # 最大库存为最小库存的倍数

# 库存业务配置
INVENTORY_AVERAGE_DAILY_SALES="2"  # 平均日销量假设值
INVENTORY_ALERT_REFRESH_INTERVAL="300000"  # 库存预警刷新间隔（毫秒，5分钟）
INVENTORY_ALERT_LIMIT="20"  # 库存预警返回数量限制

# 分页配置
DEFAULT_PAGE_SIZE="20"  # 默认分页大小
MAX_PAGE_SIZE="100"  # 最大分页大小

# 产品模块配置
PRODUCT_LIST_INCLUDE_INVENTORY="false"     # 默认是否包含库存统计
PRODUCT_LIST_INCLUDE_STATISTICS="false"    # 默认是否包含统计信息
PRODUCT_CACHE_WITH_INVENTORY_TTL="60"      # 包含库存的产品缓存TTL
PRODUCT_CACHE_WITHOUT_INVENTORY_TTL="30"   # 不包含库存的产品缓存TTL

# 销售订单配置
ORDER_NUMBER_MAX_RETRY="10"                # 订单号生成最大重试次数
ORDER_NUMBER_RECENT_LIMIT="5"              # 最近订单查询数量

# 客户模块配置
CUSTOMER_SEARCH_LIMIT="5"                  # 客户搜索结果限制
CUSTOMER_TAG_LIMIT="10"                    # 客户标签数量上限

# 仪表盘配置
DASHBOARD_STALE_TIME="300000"              # 仪表盘数据过期时间（5分钟）
DASHBOARD_REFETCH_INTERVAL="60000"         # 仪表盘刷新间隔（1分钟）

# 厂家发货模块配置
FACTORY_SHIPMENT_ORDER_PREFIX="FS"        # 厂家发货订单号前缀
FACTORY_SHIPMENT_QUERY_LIMIT="1000"       # 厂家发货表单查询限制

# 退货/退款模块配置
REFUND_ORDER_PREFIX="REF"                 # 退款单号前缀
RETURN_ORDER_PREFIX="RT"                  # 退货单号前缀
RETURN_ORDER_ITEMS_LIMIT="50"             # 退货明细上限
REFUND_BATCH_LIMIT="50"                   # 退款批量处理上限
FINANCE_CREDIT_LIMIT="100000"             # 财务信用额度限制
FINANCE_CACHE_TTL="300"                   # 财务数据缓存时间（秒）

# 销售订单模块配置
SALES_ORDER_PREFIX="SO"                   # 销售订单号前缀
SALES_ORDER_NUMBER_LENGTH="4"             # 销售订单号序号位数

# 供应商模块配置
SUPPLIER_QUERY_LIMIT="100"                # 供应商查询默认限制
SUPPLIER_CACHE_TTL="300000"               # 供应商数据缓存时间（毫秒）
SUPPLIER_DEFAULT_STATUS="active"          # 供应商默认状态过滤

# 日志配置
LOG_LEVEL="info"
