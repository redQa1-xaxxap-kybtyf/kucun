# 数据库配置
DATABASE_URL="mysql://inventory_app:secure_inventory_password@localhost:3306/inventory_system"

# Next-Auth.js 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-at-least-32-characters-long"

# Redis 配置（缓存层）
REDIS_URL="redis://127.0.0.1:6379"
REDIS_POOL_SIZE="3"
REDIS_NAMESPACE="kucun"

# WebSocket 配置
WS_PORT="3002"
WS_ALLOWED_ORIGINS="http://localhost:3000"
NEXT_PUBLIC_WS_PORT="3002"

# 应用配置
NODE_ENV="development"
PORT="3000"

# 文件上传配置
UPLOAD_DIR="./public/uploads"
UPLOAD_MAX_SIZE="10485760"  # 10MB in bytes

# 缓存配置
PRODUCT_CACHE_TTL="60"  # 产品缓存时间（秒）

# 日志配置
LOG_LEVEL="info"
