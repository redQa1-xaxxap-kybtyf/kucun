# EditorConfig配置文件
# 确保不同编辑器和IDE的一致性
# https://editorconfig.org

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript和JavaScript文件
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 80

# JSON文件
[*.json]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# 配置文件
[*.{config.js,config.ts}]
indent_style = space
indent_size = 2

# 包管理文件
[package.json]
indent_style = space
indent_size = 2

# 环境变量文件
[.env*]
trim_trailing_whitespace = false

# Prisma schema文件
[*.prisma]
indent_style = space
indent_size = 2
